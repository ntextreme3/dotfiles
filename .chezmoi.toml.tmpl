{{- $email := promptStringOnce . "email" "Which email address would you like to configure for git" -}}
{{- $gpgformats := list "ssh" "gpg" -}}
{{- $gpgformat := promptChoiceOnce . "gpgformat" "Which git gpg format will you use" $gpgformats -}}
{{- $sk := promptStringOnce . "signingkey" "Which signingkey would you like to sign commits with" -}}
[data]
    email = {{ $email | quote }}
    signingkey = {{ $sk | quote }}
    gpgformat = {{ $gpgformat | quote }}
